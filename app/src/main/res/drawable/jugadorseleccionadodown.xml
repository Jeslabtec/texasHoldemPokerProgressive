        </shape>
    </item>
    <item android:right="@dimen/BordesJugadorestopW">
        <shape>
            <gradient
                android:startColor="@color/Dorado1"
                android:centerColor="@color/Dorado2"
                android:endColor="@color/Dorado3"
                android:angle="270"/>
        </shape>
    </item>
    <item android:gravity="center"
