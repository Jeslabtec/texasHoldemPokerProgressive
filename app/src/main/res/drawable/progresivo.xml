<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <stroke android:color="@color/Dorado3"
            android:width="@dimen/Borde_progresivo"
            />
        <corners android:radius="30dp"/>

    </shape>
</item>
<item android:gravity="center"
    android:height="@dimen/Tamaño_progresivo_hInt"
    android:width="@dimen/Tamaño_progresivo_wInt">
    <shape android:shape="rectangle"
        >
        <corners android:radius="30dp"/>
        <gradient
            android:startColor="@color/gris1"
            android:centerColor="@color/gris2"
            android:endColor="@color/gris3"
            android:angle="0"/>
        <stroke android:color="@color/Dorado3"
            android:width="@dimen/Borde_progresivo"
            />
    </shape>
</item>
</layer-list>