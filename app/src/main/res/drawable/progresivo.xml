<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <stroke android:color="@color/Dorado3"
            android:width="@dimen/Borde_progresivo"
            />
        <corners android:radius="30dp"/>

    </shape>
</item>
<item
    android:top="@dimen/Tamaño_progresivo_PaddingH"
    android:left="@dimen/Tamaño_progresivo_PaddingW"
    android:start="@dimen/Tamaño_progresivo_PaddingW"
    android:bottom="@dimen/Tamaño_progresivo_PaddingH"
    android:end="@dimen/Tamaño_progresivo_PaddingW"
    android:right="@dimen/Tamaño_progresivo_PaddingW">
    <shape android:shape="rectangle"
        >
        <corners android:radius="30dp"/>
        <gradient
            android:startColor="@color/gris1"
            android:centerColor="@color/gris2"
            android:endColor="@color/gris3"
            android:angle="0"/>
        <stroke android:color="@color/Dorado3"
            android:width="@dimen/Borde_progresivo"
            />
    </shape>
</item>
</layer-list>